{# templates/producto/lista.html.twig #}
{% extends 'base.html.twig' %}


{% block title %}Lista de Productos{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
{% endblock %}

{% block content %}
    <h1 class="title">Lista de Productos</h1>
{% endblock %}    

{% block boton1 %}
    <button class="btn-light">Ver Orden</button>
{% endblock %}

{% block boton2 %}
    <button class="btn-light1">Salir</button>
{% endblock %}

{% block content1 %}
    <div class="product-container">
        {% for producto in productos %}
            <div class="product-item">
                <img src="{{ asset(producto.imagen) }}" alt="{{ producto.nombre }}" width="200">
                <h2>{{ producto.nombre }}</h2>
                <p>{{ producto.descripcion }}</p>
                <a href="{{ path('detalle_producto', {'id': producto.id}) }}" class="btn btn-dark">Ver Detalle</a>
                <span>Precio: ${{ producto.precio }}</span>
                

            </div>
        {% endfor %}
    </div>
{% endblock %}








    